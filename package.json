{
  "name": "solid-typescript",
  "version": "1.0.0",
  "main": "src/server.js",
  "license": "MIT",
  "description": "Project made with NodeJS and TypeScript to learn more about SOLID principles.",
  "author": {
    "name": "Christiano Marques",
    "url": "https://github.com/christianodejesus"
  },
  "keywords": [
    "NodeJS",
    "typescript",
    "rest",
    "api",
    "solid"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/christianodejesus/solid-typescript.git"
  },
  "scripts": {
    "dev": "npx ts-node-dev --ignore-watch node_modules --respawn --clear --transpile-only --no-notify ./src/server.ts",
    "lint": "./node_modules/.bin/eslint ./src",
    "prebuild": "rm -Rf build/**",
    "build": "./node_modules/.bin/tsc --outDir ./build",
    "build:dev": "npm run build -- --sourceMap"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "nodemailer": "^6.4.11",
    "uuidv4": "^6.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.27",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.7"
  }
